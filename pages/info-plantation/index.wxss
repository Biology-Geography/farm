.info-image swiper {
  height: 200px;
}
.info-name {
  margin-top: 10px;
  height: 50px;
}
.info-name .sitelocation {
  margin-top: 10px;
}
.navigation-block {
  margin-top: 30px;
  box-shadow: 0px 0px 5px 0px grey;
}
.navigation-block .navigation {
  height: 30px;
  border-bottom: 1px solid grey;
  display: flex;
  justify-content: space-between;
}
.navigation-block .navigation .group {
  display: flex;
  align-items: center;
}
.navigation-block .navigation .group image {
  width: 70rpx;
  height: 70rpx;
}
.navigation-block .navigation .group text {
  font-size: 35rpx;
  font-family: "黑体";
}
.navigation-block .navigation .turnto {
  display: flex;
  align-items: center;
}
.navigation-block .navigation .turnto image {
  width: 30rpx;
  height: 30rpx;
}
.info-farm {
  margin-top: 10px;
}
.info-farm .info-farm-label {
  color: #0d2f8a;
  display: flex;
  justify-content: space-around;
}
.info-farm swiper {
  margin-top: 10px;
  height: 250px;
  box-shadow: 0px 0px 2px 0px grey;
}
.info-farm swiper view {
  margin-top: 10px;
}
.items-block .tip {
  margin-top: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.items-block .items {
  padding: 25rpx;
  column-count: 2;
  column-gap: 40rpx;
}
.items-block .items .item {
  margin-bottom: 40rpx;
  -webkit-column-break-inside: avoid;
  overflow: hidden;
  border-radius: 8rpx;
  border: 1px solid #0d2f8a;
}
.items-block .items .item image {
  width: 100%;
  height: 120px;
}
.items-block .items .item .detail {
  background-color: rgba(13, 47, 138, 0.5);
  color: white;
  display: flex;
  flex-direction: column;
  font-size: 35rpx;
}
