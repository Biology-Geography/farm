.enterprise-info .enterprise-layer .item {
  border-bottom: 1px solid #f5f5f5;
  height: 50px;
}
.enterprise-info .enterprise-layer .item .content {
  display: flex;
}
.enterprise-info .enterprise-layer .item .content image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.enterprise-info .enterprise-layer .item .content .info {
  margin-top: 30rpx;
  margin-left: 5%;
}
.enterprise-info .enterprise-layer .item .content .info text {
  color: grey;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.enterprise-info .NO-enterprise {
  margin-top: 10px;
  font-weight: bolder;
  font-style: italic;
  color: grey;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-btn cover-image {
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-top: 100%;
}
