.certification-page .certification-item {
  border-bottom: 1px solid #d5dddd;
  display: flex;
  justify-content: space-between;
}
.certification-page .certification-item .certification-info {
  color: grey;
  font-size: 40rpx;
  margin-top: 10px;
}
.certification-page .certification-item .certification-img {
  margin-right: 10px;
  margin-top: 2px;
}
.certification-page .certification-item .certification-img image {
  float: right;
  border-radius: 15rpx;
  box-shadow: 0px 2px 3px 0px #d5dddd;
  width: 150rpx;
  height: 125rpx;
}
.certification-page .NO-certification {
  margin-top: 10px;
  font-weight: bolder;
  font-style: italic;
  color: grey;
  display: flex;
  justify-content: center;
  align-items: center;
}
.certification-page .add-btn cover-image {
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-top: 100%;
}
