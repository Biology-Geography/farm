.search-navi {
  display: flex;
  justify-content: space-between;
  background-color: #2e8b57;
  height: 100rpx;
}
.search-navi .search-nav1 {
  display: flex;
  border: 1px solid #e4e2e2;
  width: 75%;
  height: 80rpx;
  background-color: white;
  border-radius: 50rpx;
  align-items: center;
}
.search-navi .search-nav1 image {
  width: 50rpx;
  height: 50rpx;
}
.search-navi .search-nav1 input {
  font-size: 35rpx;
}
.search-navi button {
  height: 80rpx;
  border: 0;
  background-color: #fff;
  color: #a5a4a4;
  font-size: 30rpx;
  margin-right: 10px;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.search-record .search-block {
  display: flex;
  justify-content: space-between;
}
.search-record .search-block label {
  font-size: 40rpx;
  font-style: italic;
  color: #a7a4a4;
}
.search-record .search-block cover-image {
  width: 70rpx;
  height: 70rpx;
}
.search-record .search-layer {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.search-record .search-layer view {
  width: 200rpx;
  height: 100rpx;
}
.search-record .search-layer view text {
  font-family: "宋体";
}
.search-record .tip {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
